{
  "name": "DOM manipulation Example",
  "version": "1.0",
  "description": "Chrome Extension Example for manipulating DOM.",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Dragg'z",
    "default_popup": "popup.html"
  },
  "permissions": [
    "webNavigation",
    "*://*/*",
    "storage",
    "unlimitedStorage",
    "tabs"
  ],
  "content_scripts": [    
       {
           "matches": [
               "http://*/*",
               "https://*/*"
           ],
           "js": ["interact.js", "content.js"],
           "all_frames": true,
           "run_at": "document_idle"
       }
   ],
  "manifest_version": 2
}